<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"

    >

    <FrameLayout
        android:id="@+id/Message_root_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/background_message_text"
        android:padding="20dp"

        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView_message_image_send"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icons8_facebook_messenger"
            android:minWidth="256dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"

            />
      <!--
          android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_icons8_facebook_messenger"

            -->







    </FrameLayout>

    <TextView
        android:id="@+id/text_view_time_image_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:gravity="end"
        android:paddingStart="4dp"
        android:paddingEnd="8dp"
        android:text="12:12pm"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Message_root_image"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


