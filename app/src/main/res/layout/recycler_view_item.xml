<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/item_imageView_person"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="10dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@tools:sample/avatars" />

  <TextView
      android:id="@+id/item_textView_person"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="4dp"
      android:textColor="@android:color/black"
      android:textSize="20sp"
      app:layout_constraintStart_toEndOf="@+id/item_imageView_person"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="@tools:sample/full_names" />

  <TextView
      android:id="@+id/item_textView_caht_last"
      android:layout_width="285dp"
      android:layout_height="20dp"
      android:layout_marginStart="16dp"
      app:layout_constraintBottom_toBottomOf="@+id/item_imageView_person"
      app:layout_constraintStart_toEndOf="@+id/item_imageView_person"
      app:layout_constraintTop_toBottomOf="@+id/item_textView_person"
      tools:text="@tools:sample/lorem[4:10]" />

  <TextView
      android:id="@+id/item_textView_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="@tools:sample/date/hhmm"
      app:layout_constraintTop_toTopOf="@+id/item_imageView_person"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>